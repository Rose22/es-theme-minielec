<theme>
  <formatVersion>7</formatVersion>

  <variables>
      <allbackgrounds>amberelec|pink_sparkles|terminal</allbackgrounds>
  </variables>

  <!-- theme settings -->
  <subset name="shade">
      <include name="dark"></include>
      <include name="light"></include>
  </subset>
  <subset name="color">
      <include name="monochrome">./colors/monochrome.xml</include>
      <include name="pink">./colors/pink.xml</include>
      <include name="blue">./colors/blue.xml</include>
      <include name="red">./colors/red.xml</include>
      <include name="amber">./colors/amber.xml</include>
      <include name="green">./colors/green.xml</include>
  </subset>

  <subset name="font">
      <include name="default">./fonts/default.xml</include>
      <include name="pixel">./fonts/pixel.xml</include>
      <include name="cute_handwriting1" displayName="cute handwriting">./fonts/cute_handwriting1.xml</include>
      <!-- <include name="cute_handwriting2" displayName="cute handwriting (2)">./fonts/cute_handwriting2.xml</include> -->
      <include name="glasstty">./fonts/pixel2.xml</include>
  </subset>

  <subset name="background">
      <include name="none"></include>
      <include name="custom" displayName="custom (uses custombg.png in the theme folder)"></include>
      <include name="amberelec">./backgrounds/amberelec.xml</include>
      <include name="pink_sparkles" displayName="pink sparkles">./backgrounds/pink_sparkles.xml</include>
      <include name="terminal">./backgrounds/terminal.xml</include>
  </subset>

  <subset name="bgmedia" displayName="gamelist background media">
      <include name="none"></include>
      <include name="image"></include>
      <include name="video"></include>
  </subset>

  <subset name="showmarquee" displayName="show game logo in lists">
      <include name="yes"></include>
      <include name="no"></include>
  </subset>

  <subset name="selectionsound" displayName="selection sound">
      <include name="none"></include>
      <include name="retro"></include>
      <include name="click"></include>
      <include name="pop"></include>
      <include name="soft"></include>
      <include name="hard"></include>
  </subset>

  <!-- colored bar at the top -->
  <view name="system, basic, detailed">
    <text name="topbar" extra="true">
        <fontPath>${chosenfont}</fontPath>
        <pos>0 0</pos>
        <zIndex>2</zIndex>
        <size>1 0.05</size>
        <backgroundColor>${topBarBgColor}</backgroundColor>
    </text>
  </view>
  <view name="screen">
      <text name="clock">
          <fontPath>${chosenfont}</fontPath>
          <color>${topBarTextColor}</color>
          <fontSize ifSubset="font:default">0.028</fontSize>
          <fontSize ifSubset="font:pixel">0.018</fontSize>
          <fontSize ifSubset="font:glasstty">0.03</fontSize>
          <pos ifSubset="font:default">0.82 0</pos>
          <pos ifSubset="font:pixel">0.82 0.006</pos>
          <size>0.08 0.08</size>
      </text>
      <batteryIndicator name="batteryIndicator">
        <pos>0.94 0</pos>
        <color>${topBarTextColor}</color>
        <size>0.05 0.05</size>
      </batteryIndicator>
      <controllerActivity name="controllerActivity">
          <visible>false</visible>
      </controllerActivity>
  </view>

  <!-- simple, vertical system carousel meant for quickly picking a console to play on -->
  <view name="system">
    <carousel name="systemcarousel">
        <type>vertical</type>
        <pos>0.0 0.0095</pos>
        <size>1 1</size>
        <zIndex>1</zIndex>
        <logoAlignment>left</logoAlignment>
        <logoSize>1 0.125</logoSize>
        <logoPos>0 0.45</logoPos>
        <logoScale>1 1</logoScale>
        <color ifSubset="background:none">${bgColor}</color>
        <color ifSubset="background:custom|amberelec|pink_sparkles|terminal">FFFFFF00</color>

        <maxLogoCount>20</maxLogoCount>

        <scrollSound ifSubset="selectionsound:retro">./sounds/menu_select_retro.wav</scrollSound>
        <scrollSound ifSubset="selectionsound:click">./sounds/menu_select_click.wav</scrollSound>
        <scrollSound ifSubset="selectionsound:pop">./sounds/menu_select_pop.wav</scrollSound>
        <scrollSound ifSubset="selectionsound:soft">./sounds/menu_select_soft.wav</scrollSound>
        <scrollSound ifSubset="selectionsound:hard">./sounds/menu_select_hard.wav</scrollSound>
    </carousel>

    <text name="systemview" extra="true">
        <fontPath>${chosenfont}</fontPath>
        <color>${topBarTextColor}</color>
        <fontSize ifSubset="font:default">0.028</fontSize>
        <fontSize ifSubset="font:pixel|cute_handwriting1">0.02</fontSize>
        <fontSize ifSubset="font:glasstty">0.035</fontSize>
        <text>main menu</text>
        <pos ifSubset="font:default">0.005 0</pos>
        <pos ifSubset="font:pixel">0.005 0.006</pos>
    </text>
    <text name="logoText">
        <fontPath>${chosenfont}</fontPath>
        <color>${textColor}</color>
        <fontSize ifSubset="font:default">0.035</fontSize>
        <fontSize ifSubset="font:pixel">0.02</fontSize>
        <fontSize ifSubset="font:cute_handwriting1">0.035</fontSize>
        <fontSize ifSubset="font:glasstty">0.040</fontSize>
        <glowColor>${textGlowColor}</glowColor>
        <glowSize>1.2</glowSize>
    </text>
    <text name="systemInfo">
        <fontPath>${chosenfont}</fontPath>
        <color>FFFFFF</color>
        <backgroundColor></backgroundColor>
        <alignment>right</alignment>
        <visible>false</visible>
    </text>
  </view>

  <!-- custom background -->
  <view name="system, basic, detailed">
    <image name="bg_overlay" extra="true" ifSubset="background:custom|amberelec|pink_sparkles|terminal, shade:dark">
      <path>./images/black.png</path>
      <size>1 1</size>
      <color>FFFFFFBB</color>
      <zIndex>-3</zIndex>
    </image>
    <image name="bg_overlay" extra="true" ifSubset="background:custom|amberelec|pink_sparkles|terminal, shade:light">
      <path>./images/white.png</path>
      <size>1 1</size>
      <color>FFFFFFEA</color>
      <zIndex>-3</zIndex>
    </image>
    <image name="custombg" extra="true" ifSubset="background:custom">
        <pos>0 0</pos>
        <size>1 1</size>
        <path>./custombg.png</path>
        <zIndex>-4</zIndex>
    </image>
    <image name="selectedbg" extra="true" ifSubset="background:amberelec|pink_sparkles|terminal">
        <pos>0 0</pos>
        <size>1 1</size>
        <path>${bgpath}</path>
        <zIndex>-4</zIndex>
    </image>
  </view>

  <!-- menu -->
  <view name="menu">
      <menuBackground name="menubg">
          <color>${bgColor}</color>
      </menuBackground>
      <menuText name="menutext">
          <fontPath>${chosenfont}</fontPath>
          <color>${textColor}</color>
          <fontSize ifSubset="font:default|glasstty">0.035</fontSize>
          <fontSize ifSubset="font:pixel">0.02</fontSize>
          <fontSize ifSubset="font:cute_handwriting1">0.025</fontSize>
          <separatorColor ifSubset="font:default">${textColor}</separatorColor>
          <separatorColor ifSubset="font:pixel">${bgColor}</separatorColor>
          <selectedColor>${selectorTextColor}</selectedColor>
          <selectorColor>${selectorBgColor}</selectorColor>
      </menuText>
      <menuTextSmall name="menutextsmall">
          <fontPath>${chosenfont}</fontPath>
          <color>${textColor}</color>
          <fontSize ifSubset="font:default|glasstty">0.023</fontSize>
          <fontSize ifSubset="font:pixel">0.015</fontSize>
          <fontSize ifSubset="font:cute_handwriting1">0.018</fontSize>
      </menuTextSmall>
      <menuText name="menutitle">
          <fontPath>${chosenfont}</fontPath>
          <color>${textColor}</color>
          <fontSize ifSubset="font:default|glasstty">0.03</fontSize>
          <fontSize ifSubset="font:pixel">0.02</fontSize>
          <fontSize ifSubset="font:cute_handwriting1">0.025</fontSize>
      </menuText>
      <menuText name="menufooter">
          <fontPath>${chosenfont}</fontPath>
          <fontSize ifSubset="font:default|glasstty">0.035</fontSize>
          <fontSize ifSubset="font:pixel">0.01</fontSize>
          <fontSize ifSubset="font:cute_handwriting1">0.015</fontSize>
          <color>${textColor}</color>
      </menuText>
  </view>

  <!-- super basic gamelist focused on selecting a game and playing -->
  <view name="basic, detailed">
      <textlist name="gamelist">
          <pos>0 0.05</pos>
          <size>1 0.995</size>
          <primaryColor>${textColor}</primaryColor>
          <secondaryColor>${textColor}</secondaryColor>
          <selectedColor>${selectorTextColor}</selectedColor>
          <selectorColor>${selectorBgColor}</selectorColor>
          <alignment>left</alignment>
          <horizontalMargin>0.005</horizontalMargin>
          <fontPath>${chosenfont}</fontPath>
          <fontSize ifSubset="font:default">0.03</fontSize>
          <fontSize ifSubset="font:pixel">0.02</fontSize>
          <fontSize ifSubset="font:cute_handwriting1">0.03</fontSize>
          <fontSize ifSubset="font:glasstty">0.040</fontSize>
          <zIndex>0</zIndex>
          <scrollSound ifSubset="selectionsound:retro">./sounds/menu_select_retro.wav</scrollSound>
          <scrollSound ifSubset="selectionsound:click">./sounds/menu_select_click.wav</scrollSound>
          <scrollSound ifSubset="selectionsound:pop">./sounds/menu_select_pop.wav</scrollSound>
          <scrollSound ifSubset="selectionsound:soft">./sounds/menu_select_soft.wav</scrollSound>
          <scrollSound ifSubset="selectionsound:hard">./sounds/menu_select_hard.wav</scrollSound>
      </textlist>
      <text name="logoText">
          <fontPath>${chosenfont}</fontPath>
          <fontSize ifSubset="font:default">0.028</fontSize>
          <fontSize ifSubset="font:pixel|cute_handwriting1">0.02</fontSize>
          <fontSize ifSubset="font:glasstty">0.035</fontSize>
          <alignment>left</alignment>
          <pos ifSubset="font:default">0.005 0</pos>
          <pos ifSubset="font:pixel">0.005 0.006</pos>
          <color>${topBarTextColor}</color>
      </text>
      <text name="bgcolor" extra="true" ifSubset="bgmedia:none, background:none">
          <size>1 0.995</size>
          <backgroundColor>${bgColor}</backgroundColor>
          <zIndex>-3</zIndex>
      </text>
      <!-- overlay on top of background image, to darken or lighten it -->
      <image name="background" ifSubset="shade:dark, bgmedia:image|video">
          <path>./images/black.png</path>
          <color>FFFFFF${opacity}</color>
          <zIndex>-1</zIndex>
      </image>
      <image name="background" ifSubset="shade:light, bgmedia:image|video">
          <path>./images/white.png</path>
          <color>FFFFFF${opacity}</color>
          <zIndex>-1</zIndex>
      </image>
  </view>
  <view name="detailed">
    <image name="md_image" ifSubset="bgmedia:none|video">
      <visible>false</visible>
    </image>
    <video name="md_video" ifSubset="bgmedia:none">
      <visible>false</visible>
    </video>

    <image name="md_image" ifSubset="bgmedia:image|video">
        <pos>0.5 0.5</pos>
        <size>0 1</size>
        <default>./images/blank.png</default>
        <color>FFFFFF</color>
        <zIndex>-2</zIndex>
    </image>
    <image name="md_image" ifSubset="bgmedia:image|video">
        <pos>0.5 0.5</pos>
        <size>0 1</size>
        <default>./images/blank.png</default>
        <color>FFFFFF</color>
        <zIndex>-2</zIndex>
    </image>
    <video name="md_video" ifSubset="bgmedia:video">
        <pos>0.5 0.5</pos>
        <maxSize>1 1</maxSize>
        <color>FFFFFF</color>
        <zIndex>-2</zIndex>
        <delay>0.3</delay>
        <showSnapshotNoVideo>true</showSnapshotNoVideo>
        <showSnapshotDelay>true</showSnapshotDelay>
        <effect>none</effect>
    </video>
    <image name="md_marquee" ifSubset="showmarquee:yes">
        <size>0.25 0</size>
        <pos>0.86 0.15</pos>
        <color>FFFFFFCC</color>
        <zIndex>1</zIndex>
    </image>

    <!-- hide game details -->
    <text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_lbl_gametime, md_developer, md_publisher, md_genre, md_players, md_playcount, md_gametime, md_description, md_name">
        <visible>false</visible>
    </text>
    <datetime name="md_releasedate, md_lastplayed">
        <visible>false</visible>
    </datetime>
    <rating name="md_rating">
        <visible>false</visible>
    </rating>
  </view>
</theme>
