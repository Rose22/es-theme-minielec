<theme>
  <!-- TODO: add optional automatic hiding of game list when the user sits on a game in the list for a specified (in the options) amount of time (timeout) -->
  <!-- TODO: add font size selection -->
  <!-- TODO: add video backgrounds -->
  <!-- TODO: add custom overlays -->
  <!-- TODO: fix font sizes on 3:2 -->
  <!-- TODO: add support for other screen sizes -->
  <!-- TODO: recently played customview for recently played list -->
  <!-- TODO: customview that shows box art + description + metadata for one game at a time -->
  <!-- TODO: coverflow customview -->
  <!-- TODO: grid customview that maximizes screen real estate (no margins, no padding, titles and marquee optionally overlaid on top of boxart or screenshot) -->

  <formatVersion>7</formatVersion>

  <variables>
      <allbackgrounds>amberelec|pink_sparkles|terminal</allbackgrounds>
  </variables>

  <include>./fontsizes.xml</include>

  <!-- theme settings -->
  <subset name="aspect-ratio" displayName="aspect ratio">
     <include ifArch="rg552,amberelec-rg552" name="5-3" displayName="5:3" />
     <include ifArch="rg351p,amberelec-rg351p" name="3-2" displayName="3:2" />
     <include ifArch="rg351mp,rg351v,amberelec-rg351mp,amberelec-rg351v" name="4-3" displayName="4:3" />
     <include ifNotArch="rg351p,rg351mp,rg351v,amberelec-rg351p,amberelec-rg351mp,amberelec-rg351v" name="16-9" displayName="16:9" />
     <include ifNotArch="rg552,rg351p,rg351mp,rg351v,amberelec-rg552,amberelec-rg351p,amberelec-rg351mp,amberelec-rg351v" name="4-3" displayName="4:3" />
     <include ifNotArch="rg552,rg351p,rg351mp,rg351v,amberelec-rg552,amberelec-rg351p,amberelec-rg351mp,amberelec-rg351v" name="3-2" displayName="3:2" />
     <include ifNotArch="rg552,rg351p,rg351mp,rg351v,amberelec-rg552,amberelec-rg351p,amberelec-rg351mp,amberelec-rg351v" name="5-3" displayName="5:3" />
  </subset>

  <subset name="display-top-bar" displayName="show/hide: display top bar?">
    <include name="yes"/>
    <include name="no"/>
  </subset>
  <!-- these somehow mess with the menu ordering?! -->
  <!-- <subset name="display-clock" displayName="show/hide: display clock?">
    <include name="yes"/>
    <include name="no"/>
  </subset>

  <subset name="display-indicators" displayName="show/hide: display indicators?">
    <include name="yes"/>
    <include name="no"/>
  </subset> -->
  <variables>
    <!-- <clock-pos-x ifSubset="display-indicators:no">0.91</clock-pos-x>
    <clock-pos-x ifSubset="display-indicators:yes">0.82</clock-pos-x> -->
    <clock-pos-x>0.82</clock-pos-x>
  </variables>

  <subset name="shade" displayName="appearance: shade">
      <include name="dark"></include>
      <include name="light"></include>
  </subset>
  <subset name="color" displayName="appearance: color scheme">
      <include name="monochrome">./colors/monochrome.xml</include>
      <include name="red">./colors/red.xml</include>
      <include name="green">./colors/green.xml</include>
      <include name="blue">./colors/blue.xml</include>
      <include name="gold" displayName="gold/amber">./colors/gold.xml</include>
      <include name="pink">./colors/pink.xml</include>
      <include name="purple">./colors/purple.xml</include>
  </subset>

  <subset name="font" displayName="appearance: font">
      <include name="default">./fonts/default.xml</include>
      <include name="pixel">./fonts/pixel.xml</include>
      <include name="glasstty" displayName="terminal">./fonts/glasstty.xml</include>
      <include name="cute_handwriting1" displayName="cute handwriting">./fonts/cute_handwriting1.xml</include>
  </subset>

  <subset name="text-use-fx" displayName="appearance: use text effects?">
    <include name="yes"></include>
    <include name="no"></include>
  </subset>

  <subset name="background" displayName="background: picture">
      <include name="none"></include>
      <include name="custom" displayName="custom image (uses custombg.png in the theme folder)"></include>

      <!-- TODO: implement these -->
      <!-- <include name="customgif" displayName="custom gif (uses custombg.gif in the theme folder)"></include>
      <include name="customvid" displayName="custom video (uses custombg.mp4 in the theme folder)"></include> -->

      <include name="bokeh">./backgrounds/bokeh.xml</include>
      <include name="petals">./backgrounds/petals.xml</include>
      <include name="wave">./backgrounds/wave.xml</include>
      <include name="stars">./backgrounds/stars.xml</include>
      <include name="sparkles">./backgrounds/sparkles.xml</include>
      <include name="terminal">./backgrounds/terminal.xml</include>
  </subset>

  <subset name="bg-shade" displayName="background: brightness">
    <include name="automatic"></include>
    <include name="0%" displayName="no brightness filter"></include>
    <include name="5%">./overlays/bg_brightness/5.xml</include>
    <include name="10%">./overlays/bg_brightness/10.xml</include>
    <include name="15%">./overlays/bg_brightness/15.xml</include>
    <include name="20%">./overlays/bg_brightness/20.xml</include>
    <include name="25%">./overlays/bg_brightness/25.xml</include>
    <include name="30%">./overlays/bg_brightness/30.xml</include>
    <include name="35%">./overlays/bg_brightness/35.xml</include>
    <include name="40%">./overlays/bg_brightness/40.xml</include>
    <include name="45%">./overlays/bg_brightness/45.xml</include>
    <include name="50%">./overlays/bg_brightness/50.xml</include>
    <include name="55%">./overlays/bg_brightness/55.xml</include>
    <include name="60%">./overlays/bg_brightness/60.xml</include>
    <include name="65%">./overlays/bg_brightness/65.xml</include>
    <include name="70%">./overlays/bg_brightness/70.xml</include>
    <include name="75%">./overlays/bg_brightness/75.xml</include>
    <include name="80%">./overlays/bg_brightness/80.xml</include>
    <include name="85%">./overlays/bg_brightness/85.xml</include>
    <include name="90%">./overlays/bg_brightness/90.xml</include>
    <include name="95%">./overlays/bg_brightness/95.xml</include>
    <include name="100%">./overlays/bg_brightness/100.xml</include>
  </subset>

  <subset name="bg-use-tinting" displayName="background: tint to match color scheme?">
    <include name="yes"></include>
    <include name="no"></include>
  </subset>

  <subset name="bg-overlay" displayName="background: overlay">
      <include name="none"></include>
      <include name="amberelec_center" displayName="amberelec logo (center)">./overlays/amberelec_center.xml</include>
      <include name="amberelec_tl" displayName="amberelec logo (top left)">./overlays/amberelec_topleft.xml</include>
      <include name="amberelec_tr" displayName="amberelec logo (top right)">./overlays/amberelec_topright.xml</include>
      <include name="amberelec_bl" displayName="amberelec logo (bottom left)">./overlays/amberelec_bottomleft.xml</include>
      <include name="amberelec_br" displayName="amberelec logo (bottom right)">./overlays/amberelec_bottomright.xml</include>
      <include name="clearglass" displayName="frosted glass (blur effect)">./overlays/clearglass.xml</include>
      <include name="sparkles" displayName="sparkles (1)">./overlays/sparkles.xml</include>
      <include name="sparkles2" displayName="sparkles (2)">./overlays/sparkles2.xml</include>
      <include name="glass" displayName="glass pane (1)">./overlays/glass.xml</include>
      <include name="glass2" displayName="glass pane (2)">./overlays/glass2.xml</include>
      <include name="ice" displayName="ice">./overlays/ice.xml</include>
      <include name="snow" displayName="snow">./overlays/snow.xml</include>
      <include name="tech" displayName="tech">./overlays/tech.xml</include>
  </subset>

  <subset name="bg-overlay-opacity" displayName="  background: overlay opacity">
    <include name="5%">./overlays/opacity/5.xml</include>
    <include name="10%">./overlays/opacity/10.xml</include>
    <include name="15%">./overlays/opacity/15.xml</include>
    <include name="20%">./overlays/opacity/20.xml</include>
    <include name="25%">./overlays/opacity/25.xml</include>
    <include name="30%">./overlays/opacity/30.xml</include>
    <include name="35%">./overlays/opacity/35.xml</include>
    <include name="40%">./overlays/opacity/40.xml</include>
    <include name="45%">./overlays/opacity/45.xml</include>
    <include name="50%">./overlays/opacity/50.xml</include>
    <include name="55%">./overlays/opacity/55.xml</include>
    <include name="60%">./overlays/opacity/60.xml</include>
    <include name="65%">./overlays/opacity/65.xml</include>
    <include name="70%">./overlays/opacity/70.xml</include>
    <include name="75%">./overlays/opacity/75.xml</include>
    <include name="80%">./overlays/opacity/80.xml</include>
    <include name="85%">./overlays/opacity/85.xml</include>
    <include name="90%">./overlays/opacity/90.xml</include>
    <include name="95%">./overlays/opacity/95.xml</include>
    <include name="100%">./overlays/opacity/100.xml</include>
  </subset>

  <subset name="selection-sound" displayName="appearance: selection sound">
      <include name="none"></include>
      <include name="click"></include>
      <include name="pop"></include>
      <include name="soft"></include>
      <include name="hard"></include>
      <include name="retro1" displayName="retro (lowest)"></include>
      <include name="retro2" displayName="retro (low)"></include>
      <include name="retro3" displayName="retro (mid)"></include>
      <include name="retro4" displayName="retro (high)"></include>
      <include name="retro5" displayName="retro (higher)"></include>
      <include name="retro6" displayName="retro (highest)"></include>
  </subset>

  <subset name="bg-media" displayName="media" appliesTo="basic,detailed">
      <include name="none"></include>
      <include name="image"></include>
      <include name="video-behind" displayName="video, behind gamelist"></include>
      <include name="video-popup" displayName="video, pop up (after 5 sec)"></include>
  </subset>

  <subset name="bg-shade-gamelist" displayName="background darkening" appliesTo="basic,detailed">
    <include name="automatic"></include>
    <include name="0%" displayName="no brightness filter"></include>
    <include name="5%">./overlays/bg_brightness_gamelist/5.xml</include>
    <include name="10%">./overlays/bg_brightness_gamelist/10.xml</include>
    <include name="15%">./overlays/bg_brightness_gamelist/15.xml</include>
    <include name="20%">./overlays/bg_brightness_gamelist/20.xml</include>
    <include name="25%">./overlays/bg_brightness_gamelist/25.xml</include>
    <include name="30%">./overlays/bg_brightness_gamelist/30.xml</include>
    <include name="35%">./overlays/bg_brightness_gamelist/35.xml</include>
    <include name="40%">./overlays/bg_brightness_gamelist/40.xml</include>
    <include name="45%">./overlays/bg_brightness_gamelist/45.xml</include>
    <include name="50%">./overlays/bg_brightness_gamelist/50.xml</include>
    <include name="55%">./overlays/bg_brightness_gamelist/55.xml</include>
    <include name="60%">./overlays/bg_brightness_gamelist/60.xml</include>
    <include name="65%">./overlays/bg_brightness_gamelist/65.xml</include>
    <include name="70%">./overlays/bg_brightness_gamelist/70.xml</include>
    <include name="75%">./overlays/bg_brightness_gamelist/75.xml</include>
    <include name="80%">./overlays/bg_brightness_gamelist/80.xml</include>
    <include name="85%">./overlays/bg_brightness_gamelist/85.xml</include>
    <include name="90%">./overlays/bg_brightness_gamelist/90.xml</include>
    <include name="95%">./overlays/bg_brightness_gamelist/95.xml</include>
    <include name="100%">./overlays/bg_brightness_gamelist/100.xml</include>
  </subset>

  <subset name="display-marquee" displayName="show game logo in lists?" appliesTo="basic,detailed">
    <include name="no"></include>
    <include name="yes"></include>
  </subset>

  <subset name="game-logo-use-tinting" displayName="tint game logos to match color scheme?" appliesTo="basic,detailed">
    <include name="no"></include>
    <include name="yes"></include>
  </subset>

  <!-- colored bar at the top -->
  <view name="system, basic, detailed">
    <text name="topbar" extra="true" ifSubset="display-top-bar: yes">
        <fontPath>${chosenfont}</fontPath>
        <pos>0 0</pos>
        <zIndex>2</zIndex>
        <size>1 0.05</size>
        <backgroundColor>${top-bar-bg-color}</backgroundColor>
    </text>
  </view>
  <view name="screen">
      <text name="clock">
          <!-- <visible ifSubset="display-clock:yes, display-top-bar: yes">true</visible>
          <visible ifSubset="display-clock: no">false</visible> -->
          <visible ifSubset="display-top-bar: no">false</visible>

          <fontPath>${chosenfont}</fontPath>
          <color>${top-bar-text-color}</color>

          <fontSize ifSubset="font:default, aspect-ratio: 4-3">${fontsize_4-3_12px}</fontSize>
          <fontSize ifSubset="font:default, aspect-ratio: 3-2">${fontsize_3-2_12px}</fontSize>

          <fontSize ifSubset="font:pixel, aspect-ratio: 4-3">${fontsize_4-3_8px}</fontSize>
          <fontSize ifSubset="font:pixel, aspect-ratio: 3-2">${fontsize_3-2_6px}</fontSize>

          <fontSize ifSubset="font:cute_handwriting1, aspect-ratio: 4-3">${fontsize_4-3_24px}</fontSize>

          <fontSize ifSubset="font:glasstty, aspect-ratio: 4-3">${fontsize_4-3_16px}</fontSize>
          <fontSize ifSubset="font:glasstty, aspect-ratio: 3-2">${fontsize_4-3_14px}</fontSize>

          <pos ifSubset="font:default">${clock-pos-x} 0</pos>
          <pos ifSubset="font:pixel">${clock-pos-x} 0.008</pos>
          <pos ifSubset="font:glasstty">${clock-pos-x} -0.005</pos>
          <pos ifSubset="font:cute_handwriting1">${clock-pos-x} -0.03</pos>

          <size>0.08 0.08</size>
      </text>
      <batteryIndicator name="batteryIndicator">
        <!-- <visible ifSubset="display-indicators:no">false</visible> -->
        <visible ifSubset="display-top-bar:no">false</visible>
        <pos>0.94 0</pos>
        <color>${top-bar-text-color}</color>
        <size>0.05 0.05</size>
      </batteryIndicator>
      <controllerActivity name="controllerActivity">
          <visible>false</visible>
      </controllerActivity>
  </view>

  <!-- simple, vertical system carousel meant for quickly picking a console to play on -->
  <view name="system">
    <carousel name="systemcarousel">
        <type>vertical</type>
        <pos>0.0 0.0095</pos>
        <size>1 1</size>
        <zIndex>1</zIndex>
        <logoAlignment>left</logoAlignment>
        <logoSize>1 0.125</logoSize>
        <logoPos>0 0.45</logoPos>
        <logoScale>1 1</logoScale>

        <!-- use the colorscheme's background color if no background has been chosen -->
        <!-- <color ifSubset="background:none">${bg-color}</color> -->
        <!-- make the background transparent if a background has been chosen -->
        <!-- <color ifSubset="background:custom|amberelec|sparkles|bokeh|wave|stars|petals|terminal">FFFFFF00</color> -->
        <color>FFFFFF00</color>

        <maxLogoCount>20</maxLogoCount>

        <!-- menu selection sounds -->
        <scrollSound ifSubset="selection-sound:click">./sounds/menu_select_click.wav</scrollSound>
        <scrollSound ifSubset="selection-sound:pop">./sounds/menu_select_pop.wav</scrollSound>
        <scrollSound ifSubset="selection-sound:soft">./sounds/menu_select_soft.wav</scrollSound>
        <scrollSound ifSubset="selection-sound:hard">./sounds/menu_select_hard.wav</scrollSound>

        <scrollSound ifSubset="selection-sound:retro1">./sounds/menu_select_retro1_lowest.wav</scrollSound>
        <scrollSound ifSubset="selection-sound:retro2">./sounds/menu_select_retro2_low.wav</scrollSound>
        <scrollSound ifSubset="selection-sound:retro3">./sounds/menu_select_retro3_mid.wav</scrollSound>
        <scrollSound ifSubset="selection-sound:retro4">./sounds/menu_select_retro4_high.wav</scrollSound>
        <scrollSound ifSubset="selection-sound:retro5">./sounds/menu_select_retro5_higher.wav</scrollSound>
        <scrollSound ifSubset="selection-sound:retro6">./sounds/menu_select_retro6_highest.wav</scrollSound>

        <defaultTransition>instant</defaultTransition>
    </carousel>

    <text name="systemview" extra="true">
        <visible ifSubset="display-top-bar:no">false</visible>

        <fontPath>${chosenfont}</fontPath>
        <text>main menu</text>
        <color>${top-bar-text-color}</color>
        <fontSize ifSubset="font:default, aspect-ratio: 4-3">${fontsize_4-3_12px}</fontSize>
        <fontSize ifSubset="font:default, aspect-ratio: 3-2">${fontsize_3-2_8px}</fontSize>
        <fontSize ifSubset="font:pixel, aspect-ratio: 4-3">${fontsize_4-3_8px}</fontSize>
        <fontSize ifSubset="font:pixel, aspect-ratio: 3-2">${fontsize_3-2_6px}</fontSize>
        <fontSize ifSubset="font:cute_handwriting1">0.05</fontSize>
        <fontSize ifSubset="font:glasstty, aspect-ratio: 4-3">${fontsize_4-3_16px}</fontSize>
        <fontSize ifSubset="font:glasstty, aspect-ratio: 3-2">${fontsize_4-3_16px}</fontSize>
        <pos ifSubset="font:default">0.005 0</pos>
        <pos ifSubset="font:pixel">0.005 0.008</pos>
        <pos ifSubset="font:glasstty">0.005 0.001</pos>
        <pos ifSubset="font:cute_handwriting1">0.005 -0.03</pos>
    </text>
    <text name="logoText">
        <fontPath>${chosenfont}</fontPath>
        <color ifSubset="shade: dark">${text-color-dark}</color>
        <color ifSubset="shade: light, text-use-fx: no">${text-color-light}</color>
        <color ifSubset="shade: light, text-use-fx: yes">${text-color-dark}</color>

        <fontSize ifSubset="font:default, aspect-ratio: 4-3">${fontsize_4-3_18px}</fontSize>
        <fontSize ifSubset="font:default, aspect-ratio: 3-2">${fontsize_3-2_14px}</fontSize>
        <fontSize ifSubset="font:pixel, aspect-ratio: 4-3">${fontsize_4-3_10px}</fontSize>
        <fontSize ifSubset="font:pixel, aspect-ratio: 3-2">${fontsize_3-2_8px}</fontSize>
        <fontSize ifSubset="font:cute_handwriting1, aspect-ratio: 4-3">${fontsize_4-3_24px}</fontSize>
        <fontSize ifSubset="font:glasstty, aspect-ratio: 4-3">${fontsize_4-3_16px}</fontSize>
        <fontSize ifSubset="font:glasstty, aspect-ratio: 3-2">${fontsize_4-3_20px}</fontSize>

        <!-- without a glow, ES makes the systems that are not selected a very muted color. dont want that -->
        <glowColor ifSubset="text-use-fx:yes, shade:dark">${text-glow-color}</glowColor>
        <glowSize ifSubset="text-use-fx:yes, shade:dark">1.2</glowSize>

        <glowColor ifSubset="text-use-fx:yes, shade:light">${text-color-light}</glowColor>
        <glowSize ifSubset="text-use-fx:yes, shade:light">1</glowSize>
        <glowOffset ifSubset="text-use-fx: yes, shade:light">1.5</glowOffset>
    </text>

    <!-- hide system info -->
    <text name="systemInfo">
        <visible>false</visible>
    </text>

    <!-- hide the help texts -->
    <helpsystem name="help">
        <pos>999 999</pos>
    </helpsystem>
  </view>

  <!-- custom background -->
  <view name="system, basic, detailed">
    <!-- if no background has been chosen, use the color scheme's background color -->
    <text name="bgcolor" extra="true" ifSubset="background: none">
        <size>1 1</size>
        <backgroundColor ifSubset="shade: dark">00000088</backgroundColor>
        <backgroundColor ifSubset="shade: light">FFFFFFEE</backgroundColor>
        <zIndex>-10</zIndex>
    </text>

    <!-- optional overlay -->
    <image name="bg_fx_overlay" extra="true">
      <path>${bg-overlay}</path>
      <size>1 1</size>
      <color ifSubset="bg-use-tinting: no">FFFFFF${bg-overlay-opacity}</color>
      <color ifSubset="bg-use-tinting: yes">${top-bar-bg-color}${bg-overlay-opacity}</color>
      <zIndex>-2</zIndex>
    </image>

    <!-- load the chosen background -->
    <image name="custombg" extra="true" ifSubset="background: custom">
      <color ifSubset="bg-use-tinting: no">FFFFFF${bg-brightness-modifier}</color>
      <color ifSubset="bg-use-tinting: yes">${top-bar-bg-color}${bg-brightness-modifier}</color>

      <color ifSubset="bg-use-tinting: no, bg-shade: 0%">FFFFFF</color>
      <color ifSubset="bg-use-tinting: no, bg-shade: automatic, shade: dark">FFFFFF44</color>
      <color ifSubset="bg-use-tinting: no, bg-shade: automatic, shade: light">FFFFFF22</color>

      <color ifSubset="bg-use-tinting: yes, bg-shade: 0%">${top-bar-bg-color}</color>
      <color ifSubset="bg-use-tinting: yes, bg-shade: automatic, shade: dark">${top-bar-bg-color}44</color>
      <color ifSubset="bg-use-tinting: yes, bg-shade: automatic, shade: light">${top-bar-bg-color}22</color>
        <!-- <color ifSubset="bg-use-tinting:yes">${top-bar-bg-color}</color> -->

        <pos>0 0</pos>
        <size>1 1</size>
        <path>./custombg.png</path>
        <zIndex>-9</zIndex>
    </image>
    <image name="selectedbg" extra="true">
        <color ifSubset="bg-use-tinting: no">FFFFFF${bg-brightness-modifier}</color>
        <color ifSubset="bg-use-tinting: yes">${top-bar-bg-color}${bg-brightness-modifier}</color>
        <color ifSubset="bg-use-tinting: no, bg-shade: 0%">FFFFFF</color>
        <color ifSubset="bg-use-tinting: no, bg-shade: automatic">FFFFFF${bg-opacity}</color>
        <color ifSubset="bg-use-tinting: yes, bg-shade: 0%">${top-bar-bg-color}</color>
        <color ifSubset="bg-use-tinting: yes, bg-shade: automatic">${top-bar-bg-color}${bg-opacity}</color>

        <pos>0 0</pos>
        <size>0 1</size>
        <path>${bgpath}</path>
        <zIndex>-9</zIndex>

        <visible ifSubset="background: none|custom">false</visible>
    </image>

    <!-- if a background has been chosen, create a base color below the image, to darken or lighten it -->
    <image name="bg_shade" extra="true">
      <path ifSubset="shade: dark">./overlays/black.png</path>
      <path ifSubset="shade: light">./overlays/white.png</path>

      <color>FFFFFF</color>

      <size>1 1</size>
      <zIndex>-10</zIndex>

      <visible ifSubset="bg-shade: 0%">false</visible>
    </image>
  </view>

  <!-- menu -->
  <view name="menu">
      <menuBackground name="menubg">
          <color>${bg-color}</color>
      </menuBackground>
      <menuText name="menutext">
          <fontPath>${chosenfont}</fontPath>
          <color ifSubset="shade: dark">${text-color-dark}</color>
          <color ifSubset="shade: light">${text-color-light}</color>
          <fontSize ifSubset="font:default, aspect-ratio: 4-3">${fontsize_4-3_16px}</fontSize>
          <fontSize ifSubset="font:default, aspect-ratio: 3-2">${fontsize_4-3_14px}</fontSize>
          <fontSize ifSubset="font:glasstty, aspect-ratio: 4-3">${fontsize_4-3_16px}</fontSize>
          <fontSize ifSubset="font:glasstty, aspect-ratio: 3-2">${fontsize_4-3_18px}</fontSize>
          <fontSize ifSubset="font:pixel, aspect-ratio: 4-3">${fontsize_4-3_10px}</fontSize>
          <fontSize ifSubset="font:pixel, aspect-ratio: 3-2">${fontsize_3-2_8px}</fontSize>
          <fontSize ifSubset="font:cute_handwriting1, aspect-ratio: 4-3">${fontsize_4-3_22px}</fontSize>

          <glowColor ifSubset="text-use-fx:yes">${text-glow-color}</glowColor>
          <glowSize ifSubset="text-use-fx:yes">1.2</glowSize>

          <separatorColor>${bg-color}</separatorColor>
          <selectedColor>${selector-text-color}</selectedColor>
          <selectorColor>${selector-bg-color}</selectorColor>
      </menuText>
      <menuTextSmall name="menutextsmall">
          <fontPath>${chosenfont}</fontPath>
          <color>${selector-bg-color}</color>
          <fontSize ifSubset="font:default, aspect-ratio: 4-3">${fontsize_4-3_12px}</fontSize>
          <fontSize ifSubset="font:default, aspect-ratio: 3-2">${fontsize_4-3_10px}</fontSize>
          <fontSize ifSubset="font:glasstty, aspect-ratio: 4-3">${fontsize_4-3_12px}</fontSize>
          <fontSize ifSubset="font:glasstty, aspect-ratio: 3-2">${fontsize_4-3_14px}</fontSize>
          <fontSize ifSubset="font:pixel, aspect-ratio: 4-3">${fontsize_4-3_8px}</fontSize>
          <fontSize ifSubset="font:pixel, aspect-ratio: 3-2">${fontsize_3-2_6px}</fontSize>
          <fontSize ifSubset="font:cute_handwriting1, aspect-ratio: 4-3">${fontsize_4-3_20px}</fontSize>

          <glowColor ifSubset="text-use-fx:yes">${text-glow-color}</glowColor>
          <glowSize ifSubset="text-use-fx:yes">1.2</glowSize>
      </menuTextSmall>
      <menuText name="menutitle">
          <fontPath>${chosenfont}</fontPath>
          <color ifSubset="shade: dark">${text-color-dark}</color>
          <color ifSubset="shade: light">${text-color-light}</color>
          <fontSize ifSubset="font:default, aspect-ratio: 4-3">${fontsize_4-3_16px}</fontSize>
          <fontSize ifSubset="font:default, aspect-ratio: 3-2">${fontsize_4-3_14px}</fontSize>
          <fontSize ifSubset="font:glasstty, aspect-ratio: 4-3">${fontsize_4-3_16px}</fontSize>
          <fontSize ifSubset="font:glasstty, aspect-ratio: 3-2">${fontsize_4-3_18px}</fontSize>
          <fontSize ifSubset="font:pixel, aspect-ratio: 4-3">${fontsize_4-3_12px}</fontSize>
          <fontSize ifSubset="font:pixel, aspect-ratio: 3-2">${fontsize_3-2_12px}</fontSize>
          <fontSize ifSubset="font:cute_handwriting1, aspect-ratio: 4-3">${fontsize_4-3_24px}</fontSize>

          <glowColor ifSubset="text-use-fx:yes">${text-glow-color}</glowColor>
          <glowSize ifSubset="text-use-fx:yes">1.2</glowSize>
      </menuText>
      <menuText name="menufooter">
          <fontPath>${chosenfont}</fontPath>
          <fontSize ifSubset="font:default, aspect-ratio: 4-3">${fontsize_4-3_10px}</fontSize>
          <fontSize ifSubset="font:default, aspect-ratio: 3-2">${fontsize_4-3_8px}</fontSize>
          <fontSize ifSubset="font:glasstty, aspect-ratio: 4-3">${fontsize_4-3_10px}</fontSize>
          <fontSize ifSubset="font:glasstty, aspect-ratio: 3-2">${fontsize_4-3_14px}</fontSize>
          <fontSize ifSubset="font:pixel, aspect-ratio: 4-3">${fontsize_4-3_8px}</fontSize>
          <fontSize ifSubset="font:pixel, aspect-ratio: 3-2">${fontsize_3-2_6px}</fontSize>
          <fontSize ifSubset="font:cute_handwriting1, aspect-ratio: 4-3">${fontsize_4-3_12px}</fontSize>
          <color ifSubset="shade: dark">${text-color-dark}</color>
          <color ifSubset="shade: light">${text-color-light}</color>

          <glowColor ifSubset="text-use-fx:yes">${text-glow-color}</glowColor>
          <glowSize ifSubset="text-use-fx:yes">1.2</glowSize>
      </menuText>

      <!-- hide the help texts -->
      <helpsystem name="help">
          <pos>999 999</pos>
      </helpsystem>
  </view>

  <!-- super basic gamelist focused on selecting a game and playing -->
  <view name="basic, detailed">
      <textlist name="gamelist">
          <pos ifSubset="display-top-bar:yes">0 0.05</pos>
          <pos ifSubset="display-top-bar:no">0 0</pos>

          <size ifSubset="display-top-bar:yes">1 0.9624</size>
          <size ifSubset="display-top-bar:no, font:default|glasstty|cute_handwriting1">1 1.05</size>
          <size ifSubset="display-top-bar:no, font:pixel">1 1</size>

          <primaryColor ifSubset="shade: dark">${text-color-dark}</primaryColor>
          <primaryColor ifSubset="shade: light">${text-color-light}</primaryColor>
          <secondaryColor ifSubset="shade: dark">${text-color-dark}</secondaryColor>
          <secondaryColor ifSubset="shade: light">${text-color-light}</secondaryColor>

          <selectedColor>${selector-text-color}</selectedColor>
          <selectorColor>${selector-bg-color}</selectorColor>
          <alignment>left</alignment>
          <horizontalMargin>0.005</horizontalMargin>
          <fontPath>${chosenfont}</fontPath>
          <fontSize ifSubset="font:default, aspect-ratio: 4-3">${fontsize_4-3_16px}</fontSize>
          <fontSize ifSubset="font:default, aspect-ratio: 3-2">${fontsize_3-2_12px}</fontSize>
          <fontSize ifSubset="font:pixel, aspect-ratio: 4-3">${fontsize_4-3_10px}</fontSize>
          <fontSize ifSubset="font:pixel, aspect-ratio: 3-2">${fontsize_3-2_8px}</fontSize>
          <fontSize ifSubset="font:cute_handwriting1, aspect-ratio: 4-3">${fontsize_4-3_22px}</fontSize>
          <fontSize ifSubset="font:glasstty, aspect-ratio: 4-3">${fontsize_4-3_16px}</fontSize>
          <fontSize ifSubset="font:glasstty, aspect-ratio: 3-2">${fontsize_3-2_14px}</fontSize>
          <zIndex>1</zIndex>

          <glowColor ifSubset="text-use-fx:yes">${text-glow-color}</glowColor>
          <glowSize ifSubset="text-use-fx:yes">1.8</glowSize>

          <!-- TODO: automatic gamelist hiding -->

          <!-- menu selection sounds -->
          <scrollSound ifSubset="selection-sound:click">./sounds/menu_select_click.wav</scrollSound>
          <scrollSound ifSubset="selection-sound:pop">./sounds/menu_select_pop.wav</scrollSound>
          <scrollSound ifSubset="selection-sound:soft">./sounds/menu_select_soft.wav</scrollSound>
          <scrollSound ifSubset="selection-sound:hard">./sounds/menu_select_hard.wav</scrollSound>

          <scrollSound ifSubset="selection-sound:retro1">./sounds/menu_select_retro1_lowest.wav</scrollSound>
          <scrollSound ifSubset="selection-sound:retro2">./sounds/menu_select_retro2_low.wav</scrollSound>
          <scrollSound ifSubset="selection-sound:retro3">./sounds/menu_select_retro3_mid.wav</scrollSound>
          <scrollSound ifSubset="selection-sound:retro4">./sounds/menu_select_retro4_high.wav</scrollSound>
          <scrollSound ifSubset="selection-sound:retro5">./sounds/menu_select_retro5_higher.wav</scrollSound>
          <scrollSound ifSubset="selection-sound:retro6">./sounds/menu_select_retro6_highest.wav</scrollSound>
      </textlist>
      <text name="logoText">
          <visible ifSubset="display-top-bar:no">false</visible>

          <fontPath>${chosenfont}</fontPath>
          <fontSize ifSubset="font:default, aspect-ratio: 4-3">${fontsize_4-3_12px}</fontSize>
          <fontSize ifSubset="font:default, aspect-ratio: 3-2">${fontsize_4-3_10px}</fontSize>
          <fontSize ifSubset="font:cute_handwriting1, aspect-ratio: 4-3">${fontsize_4-3_24px}</fontSize>
          <fontSize ifSubset="font:pixel, aspect-ratio: 4-3">${fontsize_4-3_8px}</fontSize>
          <fontSize ifSubset="font:pixel, aspect-ratio: 3-2">${fontsize_3-2_6px}</fontSize>
          <fontSize ifSubset="font:glasstty, aspect-ratio: 4-3">${fontsize_4-3_16px}</fontSize>
          <fontSize ifSubset="font:glasstty, aspect-ratio: 3-2">${fontsize_4-3_14px}</fontSize>
          <pos ifSubset="font:default">0.005 0</pos>
          <pos ifSubset="font:pixel">0.005 0.008</pos>
          <pos ifSubset="font:cute_handwriting1">0.005 -0.03</pos>
          <pos ifSubset="font:glasstty">0.005 0.001</pos>

          <alignment>left</alignment>
          <color>${top-bar-text-color}</color>
      </text>

      <!-- if a background has been chosen, do an overlay on top of the background, to darken or lighten it -->
      <image name="background" ifSubset="bg-media:image|video-behind|video-popup">
          <path ifSubset="shade: dark">./overlays/black.png</path>
          <path ifSubset="shade: light">./overlays/white.png</path>

          <color>FFFFFF${bg-brightness-modifier-gamelist}</color>
          <color ifSubset="bg-shade-gamelist: automatic">FFFFFF${gamelist-opacity}</color>

          <visible ifSubset="bg-shade-gamelist: 0%">false</visible>

          <zIndex>-1</zIndex>
      </image>

      <!-- hide the help texts -->
      <helpsystem name="help">
          <pos>999 999</pos>
      </helpsystem>
  </view>
  <view name="detailed">
    <!-- for some reason, the image element needs to be present for the video to pop up. so we hide it -->
    <image name="md_image" ifSubset="bg-media:none|video-behind">
      <visible>false</visible>
    </image>
    <video name="md_video" ifSubset="bg-media:none">
      <visible>false</visible>
    </video>

    <!-- show the chosen media behind the gamelist-->
    <image name="md_image" ifSubset="bg-media: image|video-popup">
        <pos>0.5 0.5</pos>
        <size>0 1</size>
        <default>./images/blank.png</default>
        <color ifSubset="bg-use-tinting:no">FFFFFF</color>
        <color ifSubset="bg-use-tinting:yes">${top-bar-bg-color}</color>
        <zIndex>-2</zIndex>
    </image>
    <video name="md_video" ifSubset="bg-media: video-behind|video-popup">
        <pos>0.5 0.5</pos>
        <maxSize>1 1</maxSize>
        <color>FFFFFF</color>
        <zIndex ifSubset="bg-media: video-behind">-2</zIndex>
        <zIndex ifSubset="bg-media: video-popup">2</zIndex>

        <delay ifSubset="bg-media: video-behind">0.3</delay>
        <delay ifSubset="bg-media: video-popup">5</delay>
        <showSnapshotNoVideo ifSubset="bg-media: video-behind">true</showSnapshotNoVideo>
        <showSnapshotDelay ifSubset="bg-media: video-behind">true</showSnapshotDelay>
        <effect>none</effect>

        <opacity ifSubset="bg-media: video-popup">0</opacity>

        <storyboard event="open" ifSubset="bg-media: video-popup">
            <animation property="scale" from="0" to="0.95" duration="500" begin="5000" mode="easeOutCubic" />
            <animation property="opacity" to="1" duration="350" begin="5000" mode="easeIn"/>
        </storyboard>
        <storyboard event="activate" ifSubset="bg-media: video-popup">
            <animation property="scale" from="0" to="0.95" duration="500" begin="5000" mode="easeOutCubic" />
            <animation property="opacity" to="1" duration="350" begin="5000" mode="easeIn"/>
        </storyboard>
        <storyboard event="deactivate" ifSubset="bg-media: video-popup">
            <animation property="scale" to="0" duration="150" begin="0" mode="easeIn"/>
            <animation property="opacity" to="0" duration="150" begin="0" mode="easeOut"/>
        </storyboard>
    </video>
    <image name="md_marquee" ifSubset="display-marquee:yes">
        <size>0.25 0</size>
        <pos>0.86 0.15</pos>
        <color ifSubset="game-logo-use-tinting:no">FFFFFFCC</color>
        <color ifSubset="game-logo-use-tinting:yes">${top-bar-bg-color}CC</color>
        <zIndex>1</zIndex>
    </image>

    <!-- hide game details -->
    <text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_lbl_gametime, md_developer, md_publisher, md_genre, md_players, md_playcount, md_gametime, md_description, md_name">
        <visible>false</visible>
    </text>
    <datetime name="md_releasedate, md_lastplayed">
        <visible>false</visible>
    </datetime>
    <rating name="md_rating">
        <visible>false</visible>
    </rating>
  </view>
</theme>
