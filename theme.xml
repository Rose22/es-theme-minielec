    <!-- hide system info -->
    <text name="systemInfo">
        <visible>false</visible>
    </text>

    <!-- hide the help texts -->
    <helpsystem name="help">
        <pos>999 999</pos>
    </helpsystem>
  </view>

  <!-- super basic gamelist focused on selecting a game and playing -->
  <view name="basic, detailed">
      <textlist name="gamelist">
          <pos ifSubset="display-top-bar:yes">0 0.05</pos>
          <pos ifSubset="display-top-bar:no|only-indicators">0 0</pos>

          <size ifSubset="display-top-bar:yes">1 0.9624</size>
          <size ifSubset="display-top-bar:no|only-indicators, font:glasstty|cute_handwriting1">1 1.05</size>
          <size ifSubset="display-top-bar:no|only-indicators, font:default|pixel">1 1</size>

          <primaryColor ifSubset="shade: dark">${text-color-dark}${gamelist-text-opacity}</primaryColor>
          <primaryColor ifSubset="shade: light">${text-color-light}${gamelist-text-opacity}</primaryColor>
          <secondaryColor ifSubset="shade: dark">${text-color-dark}${gamelist-text-opacity}</secondaryColor>
          <secondaryColor ifSubset="shade: light">${text-color-light}${gamelist-text-opacity}</secondaryColor>

          <selectedColor>${selector-text-color}${gamelist-text-opacity}</selectedColor>
          <selectorColor>${selector-bg-color}${gamelist-text-opacity}</selectorColor>
          <alignment>left</alignment>
          <alignment ifSubset="gamelist-text-alignment: left">left</alignment>
          <alignment ifSubset="gamelist-text-alignment: center">center</alignment>
          <alignment ifSubset="gamelist-text-alignment: right">right</alignment>
          <horizontalMargin>0.005</horizontalMargin>
          <fontPath>${chosenfont}</fontPath>
          <fontSize ifSubset="font:default, aspect-ratio: 4-3">${fontsize_4-3_16px}</fontSize>
          <fontSize ifSubset="font:default, aspect-ratio: 3-2">${fontsize_3-2_10px}</fontSize>
          <fontSize ifSubset="font:pixel, aspect-ratio: 4-3">${fontsize_4-3_10px}</fontSize>
          <fontSize ifSubset="font:pixel, aspect-ratio: 3-2">${fontsize_3-2_6px}</fontSize>
          <fontSize ifSubset="font:cute_handwriting1, aspect-ratio: 4-3">${fontsize_4-3_22px}</fontSize>
          <fontSize ifSubset="font:cute_handwriting1, aspect-ratio: 3-2">${fontsize_3-2_12px}</fontSize>
          <fontSize ifSubset="font:glasstty, aspect-ratio: 4-3">${fontsize_4-3_16px}</fontSize>
          <fontSize ifSubset="font:glasstty, aspect-ratio: 3-2">${fontsize_3-2_10px}</fontSize>
          <lineSpacing ifSubset="font:default">1.2</lineSpacing>
          <lineSpacing ifSubset="font:pixel">1.5</lineSpacing>
          <lineSpacing ifSubset="font:glasstty">1.2</lineSpacing>
          <lineSpacing ifSubset="font:cute_handwriting1">1.2</lineSpacing>
          <zIndex>1</zIndex>

          <!-- TODO: automatic gamelist hiding -->

          <!-- menu selection sounds -->
          <scrollSound ifSubset="selection-sound:click">./sounds/menu_select_click.wav</scrollSound>
          <scrollSound ifSubset="selection-sound:pop">./sounds/menu_select_pop.wav</scrollSound>
          <scrollSound ifSubset="selection-sound:soft">./sounds/menu_select_soft.wav</scrollSound>
          <scrollSound ifSubset="selection-sound:hard">./sounds/menu_select_hard.wav</scrollSound>

          <scrollSound ifSubset="selection-sound:retro1">./sounds/menu_select_retro1_lowest.wav</scrollSound>
          <scrollSound ifSubset="selection-sound:retro2">./sounds/menu_select_retro2_low.wav</scrollSound>
          <scrollSound ifSubset="selection-sound:retro3">./sounds/menu_select_retro3_mid.wav</scrollSound>
          <scrollSound ifSubset="selection-sound:retro4">./sounds/menu_select_retro4_high.wav</scrollSound>
          <scrollSound ifSubset="selection-sound:retro5">./sounds/menu_select_retro5_higher.wav</scrollSound>
          <scrollSound ifSubset="selection-sound:retro6">./sounds/menu_select_retro6_highest.wav</scrollSound>
      </textlist>
      <text name="logoText">
          <!-- system name in the top bar of a gamelist -->
          <visible ifSubset="display-top-bar:no|only-indicators">false</visible>

          <fontPath>${chosenfont}</fontPath>
          <fontSize ifSubset="font:default, aspect-ratio: 4-3">${fontsize_4-3_12px}</fontSize>
          <fontSize ifSubset="font:default, aspect-ratio: 3-2">${fontsize_3-2_10px}</fontSize>
          <fontSize ifSubset="font:cute_handwriting1, aspect-ratio: 4-3">${fontsize_4-3_24px}</fontSize>
          <fontSize ifSubset="font:cute_handwriting1, aspect-ratio: 3-2">${fontsize_3-2_12px}</fontSize>
          <fontSize ifSubset="font:pixel, aspect-ratio: 4-3">${fontsize_4-3_8px}</fontSize>
          <fontSize ifSubset="font:pixel, aspect-ratio: 3-2">${fontsize_3-2_6px}</fontSize>
          <fontSize ifSubset="font:glasstty, aspect-ratio: 4-3">${fontsize_4-3_16px}</fontSize>
          <fontSize ifSubset="font:glasstty, aspect-ratio: 3-2">${fontsize_4-3_16px}</fontSize>
          <pos ifSubset="font:default">0.005 0</pos>
          <pos ifSubset="font:pixel">0.005 0.008</pos>
          <pos ifSubset="font:cute_handwriting1, aspect-ratio: 4-3">0.005 -0.03</pos>
          <pos ifSubset="font:cute_handwriting1, aspect-ratio: 3-2">0.005 -0.01</pos>
          <pos ifSubset="font:glasstty">0.005 0.001</pos>

          <alignment>left</alignment>
          <color>${top-bar-text-color}</color>
      </text>

      <!-- if a background has been chosen, do an overlay on top of the background, to darken or lighten it -->
      <image name="background" ifSubset="bg-media:image|video-behind|video-popup">
          <path ifSubset="shade: dark">./overlays/black.png</path>
          <path ifSubset="shade: light">./overlays/white.png</path>

          <color>FFFFFF${bg-brightness-modifier-gamelist}</color>
          <color ifSubset="bg-shade-gamelist: automatic">FFFFFF${gamelist-opacity}</color>

          <visible ifSubset="bg-shade-gamelist: 0%">false</visible>

          <zIndex>-1</zIndex>
      </image>

      <!-- hide the help texts -->
      <helpsystem name="help">
          <pos>999 999</pos>
      </helpsystem>
  </view>
  <view name="detailed">
    <!-- show the chosen media behind the gamelist-->
    <image name="md_image">
        <pos>0.5 0.5</pos>
        <size>0 1</size>
        <default>./images/blank.png</default>
        <color ifSubset="gamelist-bg-use-tinting:no">FFFFFF</color>
        <color ifSubset="gamelist-bg-use-tinting:yes">${top-bar-bg-color}</color>
        <zIndex>-2</zIndex>

        <!-- hide this if background media has been set to none -->
        <visible ifSubset="bg-media:none">false</visible>

        <!-- crossfade animation -->
        <storyboard event="activate">
            <animation property="opacity" from="0" to="1" duration="125"/>
            <animation property="opacity" from="1" to="0.40" ifSubset="bg-media: video-behind" begin="1125" duration="250"/>
        </storyboard>
        <storyboard event="open">
            <animation property="opacity" from="0" to="1" duration="125"/>
            <animation property="opacity" from="1" to="0.40" ifSubset="bg-media: video-behind" begin="1125" duration="250"/>
        </storyboard>
    </image>
    <video name="md_video" ifSubset="bg-media: video-behind|video-popup">
        <pos>0.5 0.5</pos>
        <maxSize>1 1</maxSize>
        <color ifSubset="gamelist-bg-use-tinting: no">FFFFFF</color>
        <color ifSubset="gamelist-bg-use-tinting: yes">${top-bar-bg-color}</color>
        <zIndex ifSubset="bg-media: video-behind">-2</zIndex>
        <zIndex ifSubset="bg-media: video-popup">2</zIndex>

        <delay ifSubset="bg-media: video-behind">0.3</delay>
        <delay ifSubset="bg-media: video-popup">5</delay>
        <effect>none</effect>

        <visible ifSubset="bg-media:none">false</visible>

        <opacity ifSubset="bg-media: video-popup">0</opacity>

        <storyboard event="open" ifSubset="bg-media: video-popup">
            <animation property="scale" from="0" to="0.95" duration="500" begin="5000" mode="easeOutCubic" />
            <animation property="opacity" to="1" duration="350" begin="5000" mode="easeIn"/>
        </storyboard>
        <storyboard event="activate" ifSubset="bg-media: video-popup">
            <animation property="scale" from="0" to="0.95" duration="500" begin="5000" mode="easeOutCubic" />
            <animation property="opacity" to="1" duration="350" begin="5000" mode="easeIn"/>
        </storyboard>
        <storyboard event="deactivate" ifSubset="bg-media: video-popup">
            <animation property="scale" to="0" duration="150" begin="0" mode="easeIn"/>
            <animation property="opacity" to="0" duration="150" begin="0" mode="easeOut"/>
        </storyboard>
    </video>
    <!-- game logo -->
    <image name="md_marquee" ifSubset="display-marquee:yes">
        <size>0.30 0</size>
        <pos>0.80 0.15</pos>
        <color ifSubset="game-logo-use-tinting:no">FFFFFFCC</color>
        <color ifSubset="game-logo-use-tinting:yes">${top-bar-bg-color}CC</color>
        <zIndex>1</zIndex>

        <storyboard event="activate">
            <animation property="opacity" from="0" to="1" duration="125"/>
        </storyboard>
        <storyboard event="activateNext">
            <animation property="offsetY" from="0.02" to="0" duration="125"/>
        </storyboard>
        <storyboard event="activatePrev">
            <animation property="offsetY" from="-0.02" to="0" duration="125"/>
        </storyboard>
        <storyboard event="deactivate">
            <animation property="opacity" from="1" to="0" duration="100"/>
        </storyboard>
    </image>

    <!-- hide game details -->
    <text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_lbl_gametime, md_developer, md_publisher, md_genre, md_players, md_playcount, md_gametime, md_description, md_name">
        <visible>false</visible>
    </text>
    <datetime name="md_releasedate, md_lastplayed">
        <visible>false</visible>
    </datetime>
    <rating name="md_rating">
        <visible>false</visible>
    </rating>
  </view>

  <!-- custom background -->
  <view name="system, basic, detailed">
    <!-- if no background has been chosen, use the color scheme's background color -->
    <text name="bgcolor" extra="true" ifSubset="background: none">
        <size>1 1</size>
        <backgroundColor ifSubset="shade: dark">00000088</backgroundColor>
        <backgroundColor ifSubset="shade: light">FFFFFFEE</backgroundColor>
        <zIndex>-10</zIndex>
    </text>

    <!-- optional overlay -->
    <image name="bg_fx_overlay" extra="true">
      <path>${bg-overlay}</path>
      <path ifSubset="bg-overlay: custom">./customoverlay.png</path>
      <size>1 1</size>
      <color ifSubset="bg-use-tinting: no">FFFFFF${bg-overlay-opacity}</color>
