<theme>
  <formatVersion>7</formatVersion>
  <variables>
      <!-- dark -->
      <bg-color ifSubset="shade:dark">000000</bg-color>
      <opacity ifSubset="shade:dark">BA</opacity>
      <top-bar-bg-color ifSubset="shade:dark">cc0003</top-bar-bg-color>
      <top-bar-text-color ifSubset="shade:dark">000000</top-bar-text-color>

      <text-color ifSubset="shade:dark">ff7a7c</text-color>
      <text-glow-color ifSubset="shade:dark">ff7a7c</text-glow-color>

      <selector-bg-color ifSubset="shade:dark">ff5759</selector-bg-color>
      <selector-text-color ifSubset="shade:dark">000000</selector-text-color>

      <!-- light -->
      <bg-color ifSubset="shade:light">EEEEEE</bg-color>
      <opacity ifSubset="shade:light">E5</opacity>

      <top-bar-bg-color ifSubset="shade:light">a30002</top-bar-bg-color>
      <top-bar-text-color ifSubset="shade:light">FFFFFF</top-bar-text-color>

      <text-color ifSubset="shade:light">a80002</text-color>
      <text-glow-color ifSubset="shade:light"></text-glow-color>

      <selector-bg-color ifSubset="shade:light">8f0001</selector-bg-color>
      <selector-text-color ifSubset="shade:light">FFFFFF</selector-text-color>
  </variables>
</theme>
