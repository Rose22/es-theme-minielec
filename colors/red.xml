<theme>
  <variables>
      <formatVersion>7</formatVersion>

      <!-- dark -->
      <bgColor ifSubset="shade:dark">000000</bgColor>
      <opacity ifSubset="shade:dark">50</opacity>
      <topBarBgColor ifSubset="shade:dark">ff474a</topBarBgColor>
      <topBarTextColor ifSubset="shade:dark">FFFFFF</topBarTextColor>

      <textColor ifSubset="shade:dark">ff7a7c</textColor>
      <textGlowColor ifSubset="shade:dark">ff7a7c</textGlowColor>

      <selectorBgColor ifSubset="shade:dark">ff5759</selectorBgColor>
      <selectorTextColor ifSubset="shade:dark">FFFFFF</selectorTextColor>

      <!-- light -->
      <bgColor ifSubset="shade:light">FFFFFF</bgColor>
      <opacity ifSubset="shade:light">10</opacity>

      <topBarBgColor ifSubset="shade:light">ff9495</topBarBgColor>
      <topBarTextColor ifSubset="shade:light">000000</topBarTextColor>

      <textColor ifSubset="shade:light">a80002</textColor>
      <textGlowColor ifSubset="shade:light"></textGlowColor>

      <selectorBgColor ifSubset="shade:light">ff383a</selectorBgColor>
      <selectorTextColor ifSubset="shade:light">000000</selectorTextColor>
  </variables>
</theme>
