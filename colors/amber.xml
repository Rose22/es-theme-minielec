<theme>
  <variables>
      <formatVersion>7</formatVersion>

      <!-- dark -->
      <bgColor ifSubset="shade:dark">000000</bgColor>
      <opacity ifSubset="shade:dark">BA</opacity>
      <topBarBgColor ifSubset="shade:dark">d9781c</topBarBgColor>
      <topBarTextColor ifSubset="shade:dark">000000</topBarTextColor>

      <textColor ifSubset="shade:dark">eeb37c</textColor>
      <textGlowColor ifSubset="shade:dark">f3cba5</textGlowColor>

      <selectorBgColor ifSubset="shade:dark">e9974e</selectorBgColor>
      <selectorTextColor ifSubset="shade:dark">000000</selectorTextColor>

      <!-- light -->
      <bgColor ifSubset="shade:light">EEEEEE</bgColor>
      <opacity ifSubset="shade:light">E5</opacity>

      <topBarBgColor ifSubset="shade:light">915013</topBarBgColor>
      <topBarTextColor ifSubset="shade:light">FFFFFF</topBarTextColor>

      <textColor ifSubset="shade:light">5a320c</textColor>
      <textGlowColor ifSubset="shade:light"></textGlowColor>

      <selectorBgColor ifSubset="shade:light">6c3c0e</selectorBgColor>
      <selectorTextColor ifSubset="shade:light">FFFFFF</selectorTextColor>
  </variables>
</theme>
