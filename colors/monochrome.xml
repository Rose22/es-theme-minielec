<theme>
  <variables>
      <formatVersion>7</formatVersion>

      <!-- dark -->
      <bgColor ifSubset="shade:dark">000000</bgColor>
      <opacity ifSubset="shade:dark">BA</opacity>
      <topBarBgColor ifSubset="shade:dark">222222</topBarBgColor>
      <topBarTextColor ifSubset="shade:dark">FFFFFF</topBarTextColor>

      <textColor ifSubset="shade:dark">FFFFFF</textColor>
      <textGlowColor ifSubset="shade:dark">FFFFFF</textGlowColor>

      <selectorBgColor ifSubset="shade:dark">e3e3e3</selectorBgColor>
      <selectorTextColor ifSubset="shade:dark">000000</selectorTextColor>

      <!-- light -->
      <bgColor ifSubset="shade:light">FFFFFF</bgColor>
      <opacity ifSubset="shade:light">E5</opacity>

      <topBarBgColor ifSubset="shade:light">f0f0f0</topBarBgColor>
      <topBarTextColor ifSubset="shade:light">000000</topBarTextColor>

      <textColor ifSubset="shade:light">000000</textColor>
      <textGlowColor ifSubset="shade:light"></textGlowColor>

      <selectorBgColor ifSubset="shade:light">333333</selectorBgColor>
      <selectorTextColor ifSubset="shade:light">FFFFFF</selectorTextColor>
  </variables>
</theme>
