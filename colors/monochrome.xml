<theme>
  <formatVersion>7</formatVersion>
  <variables>
      <!-- dark -->
      <bg-color ifSubset="shade:dark">000000</bg-color>
      <opacity ifSubset="shade:dark">BA</opacity>
      <top-bar-bg-color ifSubset="shade:dark">CCCCCC</top-bar-bg-color>
      <top-bar-text-color ifSubset="shade:dark">000000</top-bar-text-color>

      <text-color ifSubset="shade:dark">FFFFFF</text-color>
      <text-glow-color ifSubset="shade:dark">FFFFFF</text-glow-color>

      <selector-bg-color ifSubset="shade:dark">e3e3e3</selector-bg-color>
      <selector-text-color ifSubset="shade:dark">000000</selector-text-color>

      <!-- light -->
      <bg-color ifSubset="shade:light">FFFFFF</bg-color>
      <opacity ifSubset="shade:light">E5</opacity>

      <top-bar-bg-color ifSubset="shade:light">222222</top-bar-bg-color>
      <top-bar-text-color ifSubset="shade:light">FFFFFF</top-bar-text-color>

      <text-color ifSubset="shade:light">000000</text-color>
      <text-glow-color ifSubset="shade:light"></text-glow-color>

      <selector-bg-color ifSubset="shade:light">333333</selector-bg-color>
      <selector-text-color ifSubset="shade:light">FFFFFF</selector-text-color>
  </variables>
</theme>
