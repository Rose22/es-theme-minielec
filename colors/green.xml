<theme>
  <variables>
      <formatVersion>7</formatVersion>

      <!-- dark -->
      <bgColor ifSubset="shade:dark">000000</bgColor>
      <opacity ifSubset="shade:dark">BE</opacity>
      <topBarBgColor ifSubset="shade:dark">8cb422</topBarBgColor>
      <topBarTextColor ifSubset="shade:dark">000000</topBarTextColor>

      <textColor ifSubset="shade:dark">afda3e</textColor>
      <textGlowColor ifSubset="shade:dark">c6e576</textGlowColor>

      <selectorBgColor ifSubset="shade:dark">99c525</selectorBgColor>
      <selectorTextColor ifSubset="shade:dark">000000</selectorTextColor>

      <!-- light -->
      <bgColor ifSubset="shade:light">EEEEEE</bgColor>
      <opacity ifSubset="shade:light">E5</opacity>

      <topBarBgColor ifSubset="shade:light">61742f</topBarBgColor>
      <topBarTextColor ifSubset="shade:light">FFFFFF</topBarTextColor>

      <textColor ifSubset="shade:light">343e19</textColor>
      <textGlowColor ifSubset="shade:light"></textGlowColor>

      <selectorBgColor ifSubset="shade:light">435021</selectorBgColor>
      <selectorTextColor ifSubset="shade:light">FFFFFF</selectorTextColor>
  </variables>
</theme>
