<theme>
  <formatVersion>7</formatVersion>
  <variables>
      <!-- dark -->
      <bg-color ifSubset="shade:dark">000000</bg-color>

      <menu-opacity ifSubset="shade:dark">77</menu-opacity>
      <gamelist-opacity ifSubset="shade:dark">BE</gamelist-opacity>

      <top-bar-bg-color ifSubset="shade:dark">ff3988</top-bar-bg-color>
      <top-bar-text-color ifSubset="shade:dark">000000</top-bar-text-color>

      <text-color ifSubset="shade:dark">FFC5dA</text-color>
      <text-glow-color ifSubset="shade:dark">FFC5DA</text-glow-color>

      <selector-bg-color ifSubset="shade:dark">FF87B7</selector-bg-color>
      <selector-text-color ifSubset="shade:dark">000000</selector-text-color>

      <!-- light -->
      <bg-color ifSubset="shade:light">EEEEEE</bg-color>

      <gamelist-opacity ifSubset="shade:light">E5</gamelist-opacity>
      <menu-opacity ifSubset="shade:light">DD</menu-opacity>

      <top-bar-bg-color ifSubset="shade:light">DA6596</top-bar-bg-color>
      <top-bar-text-color ifSubset="shade:light">FFFFFF</top-bar-text-color>

      <text-color ifSubset="shade:light">7a0031</text-color>
      <text-glow-color ifSubset="shade:light"></text-glow-color>

      <selector-bg-color ifSubset="shade:light">ff3887</selector-bg-color>
      <selector-text-color ifSubset="shade:light">FFFFFF</selector-text-color>
  </variables>
</theme>
